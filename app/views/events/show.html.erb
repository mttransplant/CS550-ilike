<% provide(:title, @event_title) %>

<div class="well">
  <div class="row">
    <div class="title"><%= @event_title %></div>
  </div>
  <hr/>
  <div class="row">
    <%= event_image_generated %>
    <div class="date"><%= @event_date %></div>
    <div class="time"><%= @event_time %></div>
    <div class="venue"><%= link_to @event_venue, "/venues/" + @event_venue_id %></div>
    <div class="address"><%= @event_address %></div>
    <div class="address"><%= @event_city + ", " + @event_state + "  " + @event_zip %></div>
    <div class="map_link"><%= link_to("Map","https://www.google.com/maps/@#{@event_latitude},#{@event_longitude},14z")%></div>
    <div class="social">
      <% current_user = User.find(session[:user_id]) %>
      
      <% if event_is_liked(current_user, @event_id) then %>
        <%= button_to("Remove Like", :action => "remove_event_like", :controller => "events", :class => "btn btn-md btn-primary active") %>
      <% else %>
        <%= button_to("Like", :controller => "events", :action => "like_event", :class => "btn btn-md btn-primary disabled") %>
      <% end %>
      <button type="button" class="btn btn-md btn-primary disabled">Dislike</button>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="title">Event Details</div>
  </div>
  <hr/>
  <div class="row">
    <p>Description: <%= @event_description %></p>
    <p>Cost: <%= @event_cost %></p>
  </div>
</div>

